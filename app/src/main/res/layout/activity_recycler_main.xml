<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/v_recycler"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorBlack"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/v_recycler"
        android:layout_alignTop="@+id/v_recycler"
        android:layout_marginLeft="50dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="triggerRequestLayout"
            android:text="requestLayout"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="triggerNotifyDataSetChange"
            android:text="notifyDataSetChange"
            />
    </LinearLayout>
</RelativeLayout>